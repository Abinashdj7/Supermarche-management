@model Product

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="BrandName"></label>
            <input asp-for="BrandName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class="form-control" />
        </div>
        <div class="mb-5">
            <label asp-for="Category"></label>
            <input asp-for="Category" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px;">
            Back to List
        </a>
    </div>
</form>

